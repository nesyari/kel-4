hargapizza = 0

toppingpizza = input("masukkan topping yang diinginkan: ")
if (toppingpizza == "frankfurter BBQ" or "meatmonsta" or "supersupreme" or "supersupremechicken"):
    hargapizza += 43637
    print("harga 43.637")

    crustpizza = input("masukkan crust yang diinginkan: ")
    if (crustpizza == "stuffedcrust cheese" or "crown crust"):
        hargapizza += 11818
        print("harga 55.455")

        ukuran = input("masukkan ukuran yang diinginkan: ")
        if (ukuran == "personal"):
            hargapizza += 0
            print("harga 43.637")

            tambahancheese = input("apakah mau menambah cheese? Y/N: ")
            if (tambahancheese == "Y"):
